<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EADCFA"
    tools:context=".NuevaEntradaDocentesFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="712dp"
        android:backgroundTint="#7846CC">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/educaplay_bar"
            android:contentDescription="@string/ImagenNombreEducaPlay" />

    </androidx.cardview.widget.CardView><androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="0dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="0dp"
    android:layout_marginBottom="712dp"
    android:backgroundTint="#7846CC">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/educaplay_bar"
        android:contentDescription="@string/ImagenNombreEducaPlay" />

</androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/custom_card"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txv_nivel"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/nivelnuevaentrada"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:ems="10"
            android:hint="@string/edtx_titulo"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#333333"
            tools:ignore="DuplicateSpeakableTextCheck" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/custom_card"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txv_titulo"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/entradatitulo"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:ems="10"
            android:hint="@string/edtx_titulo"
            android:importantForAutofill="no"
            android:inputType="text"
            android:textColor="#000000"
            android:textColorHint="#333333"
            tools:ignore="DuplicateSpeakableTextCheck" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="240dp"
        android:background="@drawable/custom_card"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txv_descripcion"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/entradadescripcion"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ems="10"
            android:hint="@string/edtx_titulo"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#333333" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginHorizontal="15dp"
        android:layout_marginTop="370dp"
        android:background="@drawable/custom_card"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/txv_texto"
            android:textColor="#000000" />

        <EditText
            android:id="@+id/entradatexto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:ems="10"
            android:hint="@string/edtx_titulo"
            android:importantForAutofill="no"
            android:inputType="textMultiLine"
            android:textColor="#000000"
            android:textColorHint="#333333" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="160dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="120dp"
        android:contentDescription="@string/ImagenNombreEducaPlay"
        android:src="@android:drawable/ic_menu_gallery"
        tools:ignore="ImageContrastCheck" />

    <Button
        android:id="@+id/button4"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/custom_button_perfil"
        android:text="@string/btn_insertar_imagen"
        android:textColor="#FFFFFF"
        tools:ignore="TextContrastCheck" />


    <Button
        android:id="@+id/btncrearentrada"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/custom_button_perfil"
        android:text="@string/btn_crear"
        android:textColor="#FFFFFF"
        tools:ignore="TextContrastCheck" />

</RelativeLayout>