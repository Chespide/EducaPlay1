<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#531EA0"
    tools:context=".Registro_docentes">


    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="309dp"
        android:layout_height="141dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="6dp"
        android:layout_marginTop="-6dp"
        android:contentDescription="@string/ImagenCohete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/imagen_cohete"
        tools:layout_editor_absoluteY="99dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:text="@string/txv_registra_nuevo_docente" />

    <EditText
        android:id="@+id/nombre_docente"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/icono_editar"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/edt_el_nombre"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:textColorHint="#6C5E5E"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/apellido_docente"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_below="@+id/nombre_docente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/icono_editar"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/edt_introduce_el_apellido"
        android:importantForAutofill="no"
        android:inputType="textPersonName"
        android:paddingStart="5dp"
        android:textColorHint="#6C5E5E"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/correo_docente"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_below="@+id/apellido_docente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/icono_correo"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/edt_el_correo"
        android:importantForAutofill="no"
        android:inputType="textEmailAddress"
        android:paddingStart="5dp"
        android:textColorHint="#6C5E5E"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/codigo_docente"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_below="@+id/correo_docente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/icono_candado"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/edt_el_documento"
        android:importantForAutofill="no"
        android:inputType="number"
        android:paddingStart="5dp"
        android:textColorHint="#6C5E5E"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />

    <EditText
        android:id="@+id/pass_docente"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_below="@+id/codigo_docente"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/custom_edittext"
        android:drawableStart="@drawable/icono_llave"
        android:drawablePadding="5dp"
        android:ems="10"
        android:hint="@string/edt_la_contraseÃ±a"
        android:importantForAutofill="no"
        android:inputType="textPassword"
        android:paddingStart="5dp"
        android:textColorHint="#6C5E5E"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry,TextContrastCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/btnregistrardocente"
        android:layout_width="240dp"
        android:layout_height="35dp"
        android:layout_below="@+id/pass_docente"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/custom_button_rosa"
        android:text="@string/btn_registralo"
        android:textColor="#FFFFFF"
        android:textSize="10sp"
        app:backgroundTint="@null"
        android:onClick="registrarsedocente"
        tools:ignore="SmallSp,TextContrastCheck,TouchTargetSizeCheck" />


</RelativeLayout>